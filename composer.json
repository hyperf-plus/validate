{
  "name": "hyperf-plus/validate",
  "type": "library",
  "keywords": [
    "php",
    "hyperf-plus",
    "validate",
    "hyperf"
  ],
  "description": "hyperf-plus validate 支持request 和方法场景验证，兼容tp5写法 支持控制器注解验证、方法注解验证",
  "license": "Apache-2.0",
  "require": {
    "php": ">=8.1",
    "hyperf/di": "^3.1.0",
    "hyperf/http-message": "^3.1.0",
    "hyperf/utils": "^3.1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "mockery/mockery": "^1.5"
  },
  "suggest": {
    "ext-json": "Required to use JSON."
  },
  "autoload": {
    "psr-4": {
      "HPlus\\Validate\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "HPlus\\Validate\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit --colors=always",
    "test-coverage": "phpunit --coverage-html coverage",
    "test-unit": "phpunit tests/Unit",
    "analyse": "phpstan analyse src --level 8",
    "cs-fix": "php-cs-fixer fix src"
  },
  "extra": {
    "hyperf": {
      "config": "HPlus\\Validate\\ConfigProvider"
    }
  },
  "config": {
    "sort-packages": true
  }
}